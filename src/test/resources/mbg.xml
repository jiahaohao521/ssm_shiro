<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--修改数据库的连接-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql:///shiro?characterEncoding=utf8"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--指定实体类的生成位置-->
        <javaModelGenerator targetPackage="com.jiahao.bean" targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--指定sqlxmlMapper的映射文件的生成位置-->
        <sqlMapGenerator targetPackage="com.jiahao.dao"  targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--指定映射接口的生成位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.jiahao.dao"  targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--指定数据库中表和实体类的名字-->
        <table schema="DB2ADMIN" tableName="users" domainObjectName="Users" />
        <table schema="DB2ADMIN" tableName="permissions" domainObjectName="Permissions" />
        <table schema="DB2ADMIN" tableName="roles" domainObjectName="Roles" />
    </context>
</generatorConfiguration>